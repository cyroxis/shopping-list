<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/primary_light</item>
        <item name="android:textColorPrimary">@color/black_primary</item>
    </style>

    <style name="Text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">@dimen/spacing_default</item>
        <item name="android:paddingBottom">@dimen/spacing_default</item>
        <item name="android:paddingLeft">@dimen/spacing_large</item>
        <item name="android:paddingRight">@dimen/spacing_large</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.ListItem">
        <item name="android:drawablePadding">@dimen/spacing_large</item>
    </style>

</resources>
